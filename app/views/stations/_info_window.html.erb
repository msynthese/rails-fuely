<div class="bbl-main">
  <div class="bbl-top row d-flex justify-content-between <%= marker[:calcul][:per_fillup].positive? ? "bg-success" : "bg-warning" %> mx-1 rounded-start">
    <div class="bbl-price text-start col-8 d-flex flex-column justify-content-center align-items-start ps-3 pt-3">
      <h5 class="fw-bold"><%= marker[:user_preference][:fuel_name] %>: <%= marker[:user_preference][:fuel_price] %> â‚¬ </h5>
      <p class="text-light">average: <%= marker[:user_preference][:preferred_fuel_average] %> â‚¬ / L <%#= @average_preferred_fuel_price %></p>
    </div>
    <div class="bbl-img col-4 p-2">
      <%= image_tag "fuelpump.png", style: "width: 60px; height: 60px;" %>
    </div>
    <div class="bbl-eco d-flex flex-column justify-content-around p-2">
      <div class="bbl-eco-info d-flex flex-row">
        <div class="bbl-eco-info-text col-8 text-end pe-2">
          <p class="text-light mb-0">Per fill-up <%= marker[:calcul][:per_fillup_text] %> </p>
          <h3 class="text-white mb-0"> <%= marker[:calcul][:per_fillup] %> â‚¬ </h3>
          <p class="text-light mb-0">vs average</p>
        </div>
        <div class="col-4 d-flex justify-content-center align-items-center">
          <% if  marker[:calcul][:per_fillup].positive? %>
            <%= image_tag "emoji_happy.png", style: "width: 30px; height: 30px;" %>
          <% else %>
            <%= image_tag "emoji_unhappy.png", style: "width: 30px; height: 30px;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="bbl-down p-2 mx-1 rounded-end bg-light">
    <div class="bbl-station-info row d-flex justify-content-between">
      <div class="col-12 text-start">
        <p class="fw-bold"><%= marker[:name] %></p>
      </div>
      <!--TEST ARRAY FOR AVERAGE PRICE IN BUBBLE-->
      <div class="col-6 text-start">
        <p><%= marker[:address] %> </p>
      </div>
      <div class="col-6 text-end">
        <p><%= marker[:city] %></p>
      </div>
      <div class="col-6 text-start">
        <p><%= marker[:brand] %></p>
      </div>
      <div class="col-6 text-end">
        <p>ðŸš™ <%= marker[:dist] %> Km</p>
      </div>
    </div>
    <div>
      <%= link_to "GO!", "https://www.google.com/maps/dir/?api=1&destination=#{marker[:lat]},#{marker[:lng]}" , class:"btn btn-primary bg-gradient w-100 mb-1",target: :_blank %>
    </div>
    <div>
      <button type="button" class="btn btn-secondary bg-gradient w-100">See All Prices</button>
    </div>
    <div class="col-6 text-start">
      <p><%#= marker %></p>
    </div>
  </div>
</div>
</div>
</div>
