    <div class="col rounded-4 shadow p-3" style="background:white">
      <h4><em>My favorite locations </em></h4>
      <div style="text-align:left; padding-left:6px"
      class="icon-large fa-regular fa-star rounded-4 btn-warning text-start" type="button">
      </div>
    </div>
  </div>
  <br>
  <div class="row col rounded-4 shadow p-3" style="background:white">
    <h4> location_user.id</h4>
    <% @locations.each do | location | %>
      <%= location.name %>
    <% end %>
  </div>
  <br>
  <div class="row col rounded-4 shadow p-3" style="background:white">
    <div class="">
      <ul><%=current_user.id %></ul>
      <h4> current_user.id</h4>
    </div>
  </div>
</div>
