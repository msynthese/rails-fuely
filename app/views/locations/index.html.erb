  <b-icon icon="star-fill" class="rounded-circle bg-warning p-2" variant="light"></b-icon>
  <b-icon icon="star-fill" class="border border-info rounded p-2" variant="info"></b-icon>
</template>
<div class="container">
  <header>
    <h1>Favorite Locations</h1>
  </header>
